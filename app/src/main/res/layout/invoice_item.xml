<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/create_invoice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/invoice_rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/invoice_number"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/invoice_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/textView9"
                android:background="@drawable/input_background"
                android:gravity="center"
                android:hint="@string/invoice_number"
                android:minHeight="32dp"
                android:paddingStart="8dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invoice_rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Customer Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/invoice_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/textView8"
                android:background="@drawable/input_background"
                android:gravity="center"
                android:hint="Customer Name"
                android:minHeight="32dp"
                android:paddingStart="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invoice_rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Invoice Amount"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/textView7"
                android:background="@drawable/input_background"
                android:gravity="center"
                android:hint="Amount in USD"
                android:minHeight="32dp"
                android:paddingStart="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invoice_rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Invoice Due Date"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/invoice_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/textView13"
                android:background="@drawable/input_background"
                android:gravity="center"
                android:hint="DD/MM/YYYY"
                android:minHeight="32dp"
                android:paddingStart="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invoice_rl5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Payment Terms"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/textView6"
                android:background="@drawable/input_background"
                android:gravity="center"
                android:hint="Enter terms"
                android:minHeight="32dp"
                android:paddingStart="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invoice_rl6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Delivery Mode"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/delivery_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/textView12"
                android:background="@drawable/input_background"
                android:gravity="center"
                android:hint="Air/Sea/Road"
                android:minHeight="32dp"
                android:paddingStart="8dp"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invoice_rl7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Delivery Destination"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/delivery_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/textView17"
                android:background="@drawable/input_background"
                android:gravity="center"
                android:hint="Air/Sea/Road"
                android:minHeight="32dp"
                android:paddingStart="8dp"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/invoice_rl8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Document Link"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/document_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/textView16"
                android:background="@drawable/input_background"
                android:gravity="center"
                android:hint="https://www.example.com/"
                android:minHeight="32dp"
                android:paddingStart="8dp"
                android:text="" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>